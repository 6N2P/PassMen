<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PassMen.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PassMen.Desktop.Views"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
	    Width="600" Height="450"
        x:Class="PassMen.Desktop.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="PassMen.Desktop"
		Background="#aeb6c4"
		WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Border Background="#545c69">
		<StackPanel Orientation="Horizontal"
					Margin="5,0"
					VerticalAlignment="Center">
			<TextBlock Text="User:"
					   VerticalAlignment="Center"/>
			<TextBlock Text="User"
					   VerticalAlignment="Center"
					   Margin="3,0,0,0"/>
			<Button Content="Войти"
					Height="25"
					FontSize="10"
					Classes="btn"
					Command="{Binding ShowAutorisationWindow}"/>
		</StackPanel>
		</Border>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="200"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Border Background="#353C49">
				
			</Border>
		</Grid>
	</Grid>
        <!--<views:MainView />-->
</Window>
